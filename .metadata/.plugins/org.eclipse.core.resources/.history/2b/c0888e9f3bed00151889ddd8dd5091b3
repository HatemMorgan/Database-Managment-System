package BTree;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.util.Properties;



class BTreeLeafNode<TKey extends Comparable<TKey>, TValue> extends BTreeNode<TKey> {
	protected  static final int LEAFORDER =4;
	private Object[] values;
	
	public BTreeLeafNode() throws IOException {
		// get maximum number of keys in the node
		/*
		 File f1 = new File("DBApp.config");
         FileReader fr = new FileReader(f1);
         Properties p1 = new Properties();
         p1.load(fr);
         LEAFORDER = Integer.parseInt(p1.getProperty("BPlusTreeN"));
         fr.close();
		*/
		
		this.keys = new Object[LEAFORDER];
		this.values = new Object[LEAFORDER];
		this.tuples = new int[LEAFORDER];
	}

	@SuppressWarnings("unchecked")
	public TValue getValue(int index) {
		return (TValue)this.values[index];
	}

	public void setValue(int index, TValue value) {
		this.values[index] = value;
	}
	
	@Override
	public TreeNodeType getNodeType() {
		return TreeNodeType.LeafNode;
	}
	
	@Override
	public int search(TKey key) {
		for (int i = 0; i < this.getKeyCount(); ++i) {
			//GEEEETKEEEEEEEEEEEEEEEEY
			 int cmp = this.getKey(i).compareTo(key);
			 if (cmp == 0) {
				 return i;
			 }
			 else if (cmp > 0) {
				 return -1;
			 }
		}
		
		return -1;
	}
	
	
	/* The codes below are used to support insertion operation */
	
	public void insertKey(TKey key, TValue value ,int tupleNumber) {
		int index = 0;
		//GEEEETKEEEEEEEEEEEEEEEEY
		while (index < this.getKeyCount() && this.getKey(index).compareTo(key) < 0)
			++index;
		this.insertAt(index, key, value , tupleNumber);
	}
	
	private void insertAt(int index, TKey key, TValue value , int tupleNumber) {
		// move space for the new key
		for (int i = this.getKeyCount() - 1; i >= index; --i) {
			//GEEEETKEEEEEEEEEEEEEEEEY
			//ssssEEEETKEEEEEEEEEEEEEEEEY
			this.setKey(i + 1, this.getKey(i));
			this.setTuples(i + 1, this.getTuples(i));
			this.setValue(i + 1, this.getValue(i));
			
		}
		
		// insert new key and value
		//ssssEEEETKEEEEEEEEEEEEEEEEY
		this.setKey(index, key);
		this.setTuples(index, tupleNumber);
		this.setValue(index, value);
		++this.keyCount;
	}

	
	protected BTreeNode<TKey> split() {
		int midIndex = this.getKeyCount() / 2;
		
		BTreeLeafNode<TKey, TValue> newRNode;
		try {
			newRNode = new BTreeLeafNode<TKey, TValue>();
			for (int i = midIndex; i < this.getKeyCount(); ++i) {
				//GEEEETKEEEEEEEEEEEEEEEEY
				//ssssEEEETKEEEEEEEEEEEEEEEEY
				newRNode.setKey(i - midIndex, this.getKey(i));
				newRNode.setTuples(i - midIndex, this.getTuples(i));
				newRNode.setValue(i - midIndex, this.getValue(i));
				this.setKey(i, null);
				this.setTuples(i, -1);
				this.setValue(i, null);
			}
			newRNode.keyCount = this.getKeyCount() - midIndex;
			this.keyCount = midIndex;
			
			return newRNode;
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
		
	}
	
	@Override
	protected BTreeNode<TKey> pushUpKey(TKey key,int tupleNumber, BTreeNode<TKey> leftChild, BTreeNode<TKey> rightNode) {
		throw new UnsupportedOperationException();
	}
	
	
	
	
	/* The codes below are used to support deletion operation */
	
	public boolean delete(TKey key) {
		int index = this.search(key);
		if (index == -1)
			return false;
		
		this.deleteAt(index);
		return true;
	}
	
	private void deleteAt(int index) {
		int i = index;
		for (i = index; i < this.getKeyCount() - 1; ++i) {
			//GEEEETKEEEEEEEEEEEEEEEEY
			//ssssEEEETKEEEEEEEEEEEEEEEEY
			this.setKey(i, this.getKey(i + 1));
			this.setTuples(i, this.getTuples(i + 1));
			this.setValue(i, this.getValue(i + 1));
		}
		//ssssEEEETKEEEEEEEEEEEEEEEEY
		this.setKey(i, null);
		this.setTuples(i, -1);
		this.setValue(i, null);
		--this.keyCount;
	}
	
	@Override
	protected void processChildrenTransfer(BTreeNode<TKey> borrower, BTreeNode<TKey> lender, int borrowIndex) {
		throw new UnsupportedOperationException();
	}
	
	@Override
	protected BTreeNode<TKey> processChildrenFusion(BTreeNode<TKey> leftChild, BTreeNode<TKey> rightChild) {
		throw new UnsupportedOperationException();
	}
	
	/**
	 * Notice that the key sunk from parent is be abandoned. 
	 */
	@Override
	@SuppressWarnings("unchecked")
	protected void fusionWithSibling(TKey sinkKey,int tupleNumber, BTreeNode<TKey> rightSibling) {
		BTreeLeafNode<TKey, TValue> siblingLeaf = (BTreeLeafNode<TKey, TValue>)rightSibling;
		
		int j = this.getKeyCount();
		for (int i = 0; i < siblingLeaf.getKeyCount(); ++i) {
			//GEEEETKEEEEEEEEEEEEEEEEY
			//ssssEEEETKEEEEEEEEEEEEEEEEY
			this.setKey(j + i, siblingLeaf.getKey(i));
			this.setTuples(j + i, siblingLeaf.getTuples(i));
			this.setValue(j + i, siblingLeaf.getValue(i));
		}
		this.keyCount += siblingLeaf.getKeyCount();
		
		this.setRightSibling(siblingLeaf.rightSibling);
		if (siblingLeaf.rightSibling != null)
			siblingLeaf.rightSibling.setLeftSibling(this);
	}
	
	@Override
	@SuppressWarnings("unchecked")
	protected TKey transferFromSibling(TKey sinkKey,BTreeNode<TKey> sibling, int borrowIndex) {
		BTreeLeafNode<TKey, TValue> siblingNode = (BTreeLeafNode<TKey, TValue>)sibling;
		//GEEEETKEEEEEEEEEEEEEEEEY
		this.insertKey(siblingNode.getKey(borrowIndex), siblingNode.getValue(borrowIndex),siblingNode.getTuples(borrowIndex));
		siblingNode.deleteAt(borrowIndex);
		//GEEEETKEEEEEEEEEEEEEEEEY
		return borrowIndex == 0 ? sibling.getKey(0) : this.getKey(0);
	}

	@Override
	protected int transferFromSibling(int tupleNumber, BTreeNode<TKey> sibling, int borrowIndex) {
        BTreeLeafNode<TKey, TValue> siblingNode = (BTreeLeafNode<TKey, TValue>)sibling;
      //GEEEETKEEEEEEEEEEEEEEEEY
		this.insertKey(siblingNode.getKey(borrowIndex), siblingNode.getValue(borrowIndex),siblingNode.getTuples(borrowIndex));
		siblingNode.deleteAt(borrowIndex);
		
		return borrowIndex == 0 ? sibling.getTuples(0) : this.getTuples(0);  
	}
}
